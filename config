# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "load"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%d-%m-%Y %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
